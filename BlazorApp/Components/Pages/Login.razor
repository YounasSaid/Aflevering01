@page "/login"
@using BlazorApp.Auth
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager NavMgr
@rendermode InteractiveServer

<div class="login-container">
    <h3>Login</h3>

    <AuthorizeView>
        <NotAuthorized>
            <div class="login-form">
                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" @bind="userName" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" @bind="password" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(errorLabel))
                {
                    <div class="alert alert-danger">
                        @errorLabel
                    </div>
                }

                <button @onclick="LoginAsync" class="btn btn-primary">Log in</button>
            </div>
        </NotAuthorized>
        <Authorized>
            <div class="success-message">
                <h3>âœ“ Logged in as @context.User.Identity?.Name</h3>
                <button @onclick="LogoutAsync" class="btn btn-secondary">Logout</button>
            </div>
        </Authorized>
    </AuthorizeView>
</div>

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
    }

    .form-group label {
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .alert {
        padding: 10px;
        border-radius: 4px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .success-message {
        text-align: center;
    }
</style>

@code {
    private string userName = "";
    private string password = "";
    private string errorLabel = "";

    private async Task LoginAsync()
    {
        errorLabel = "";
        try
        {
            await ((SimpleAuthProvider)AuthProvider).LoginAsync(userName, password);
            NavMgr.NavigateTo("/");
        }
        catch (Exception e)
        {
            Console.WriteLine(e);
            errorLabel = $"Error: {e.Message}";
        }
    }

    private async Task LogoutAsync()
    {
        await ((SimpleAuthProvider)AuthProvider).Logout();
        NavMgr.NavigateTo("/login");
    }
}
