@page "/"
@inject NavigationManager NavMgr
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<h1>Welcome to the Forum!</h1>

<AuthorizeView>
    <Authorized>
        <div class="alert alert-success">
            <h4>✓ Hello, @context.User.Identity?.Name!</h4>
            <p>You are logged in and ready to go.</p>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning">
            <h4>⚠️ You are not logged in</h4>
            <p>Please <a href="/login" style="font-weight: bold;">login</a> to access all features.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

<p>This is a simple forum application where you can create users, posts, and comments.</p>

